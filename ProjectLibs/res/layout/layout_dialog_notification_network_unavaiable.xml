<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@android:color/white"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/margin_each_item_dialog" >

    <TextView
        android:id="@+id/txtHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/title_network_unavaiable"
        android:textSize="@dimen/textsize_header_dialog"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtHeader"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/margin_network_unavaiable"
        android:layout_marginTop="@dimen/margin_each_item_dialog"
        android:layout_marginRight="@dimen/margin_each_item_dialog"
        android:text="@string/content_network_unavaiable" 
        android:gravity="center"
        />

    <Button
        android:id="@+id/btnOk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_btn_red"
        android:layout_below="@+id/txtContent" 
        android:layout_marginTop="@dimen/margin_network_unavaiable"     
        android:text="@android:string/ok"
        android:textColor="@android:color/white" />
</RelativeLayout>